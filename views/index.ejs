<html>
  <head>
    <title>Mini-Message-Board</title>
    <link rel="stylesheet" href="./styles.css">
  </head>
  <body>
    <h1>Mini Message Board</h1>
    <div class="messages">
      <ul>
        <% for (let i = 0; i < messages.length; i++) { %>
          <li>
            <h3> <%= messages[i].user %> </h3>
            <i> <%= messages[i].added %> </i> 
            <p> <%= messages[i].text %> </p>
            <a href="messages/<%= i %>">
              <span> Open </span>
            </a>
          </li>
        <% } %>
      </ul>
    </div>
    <a href="new">
      <span>New message</span>
    </a>
  </body>
</html>